	</div>
	<!-- Modal -->
	<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="exampleModalLabel">Add Review</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body">
					<form id="reviewForm" action="/addReview" method="post">
						<div class="mb-3">
							<label for="show" class="form-label">show name</label>
							<input type="show" class="form-control" id="show" name="show" readonly>
						</div>
						<div class="mb-3">
							<label for="review" class="form-label">Enter your review here</label>
							<textarea class="form-control" id="exampleFormControlTextarea1" rows="3" id="review"
								name="review"></textarea>
						</div>
					</form>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
					<button class="btn btn-primary" type="submit" form="reviewForm">Submit Review</button>
				</div>
			</div>
		</div>
	</div>
	<%- include('../partials/footer') %>